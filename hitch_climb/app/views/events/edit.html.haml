= render 'shared/flash_messages'

.common-jumbo
  .jumbo
  .climber= image_tag('/html/tiny-climber.png')
  .boulder= image_tag('/html/tiny-boulder.png')

.event-edit.container
  .title
    .telop
      = image_tag('/html/event-edit-title.png')

  .boxes
    .box
      = form_with model: @event,local: true, method: :put do |f|
        .time
        = f.label :start_time, '日時'
        = f.datetime_select :start_time, class: 'form-control', id: 'start_time'
        .form-group
          = f.label :head, 'イベント名'
          = f.text_field :head, class: 'form-control' ,id: 'event-head'
        .form-group
          = f.label :body, 'イベント内容'
          = f.text_area :body, rows:10, class: 'form-control', id: 'event-body'
        .form-gorup
          = f.label :image
          = f.file_field :image, class: "form-control"
        %br/
        = f.submit '編集', class: 'btn btn-primary btn-block'

.common-footer
  .car-mountain
    .car= image_tag('/html/top-logo-car.png')
    .mountain= image_tag('/html/top-logo-mountain.png')
  .copyright
    .text= image_tag('/html/copyright.png')