= render 'shared/flash_messages'

.common-jumbo
  .jumbo
  .climber= image_tag('/html/tiny-climber.png')
  .boulder= image_tag('/html/tiny-boulder.png')

.event-new.container
  .title
    .telop
      = image_tag('/html/events-new-title.png')


  .boxes
    .box
      = form_with model: @event, local: true do |f|
        -#= render 'shared/error_messages', { model: f.object }

        .time
          = f.label :start_time, '日時'
          = f.datetime_select :start_time, class: 'form-control', id: 'start_time'
        .form-group
          = f.label :head, 'タイトル'
          = f.text_field :head, class: 'form-control' ,id: 'event-head'
        .form-group
          = f.label :body, 'イベント内容'
          = f.text_area :body, rows:10, class: 'form-control', id: 'event-body'
        .form-group
          = f.label :image, 'イメージ'
          = f.file_field :image, class: "form-control"
        %br/
        = f.submit '投稿', class: 'btn btn-primary btn-block'

.common-footer
  .car-mountain
    .car= image_tag('/html/top-logo-car.png')
    .mountain= image_tag('/html/top-logo-mountain.png')
  .copyright
    .text= image_tag('/html/copyright.png')