= render 'shared/flash_messages'

.common-jumbo
  .jumbo
  .climber= image_tag('/html/tiny-climber.png')
  .boulder= image_tag('/html/tiny-boulder.png')

.user-edit.container
  .title
    .telop
      = image_tag('/html/user-edit-title.png')

  .boxes
    .box
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = bootstrap_devise_error_messages!

        .form-group
          = f.label :nickname
          = f.text_field :nickname, autofocus: true, autocomplete: 'nickname', |
            class: 'form-control' , required: true,  maxlength: '20'

        .form-group
          = f.label :email
          = f.email_field :email  , autofocus: true, autocomplete: 'email', |
            class: 'form-control' , required: true,  maxlength: '100'

        .form-group
          = f.label :password
          = f.password_field :password, autocomplete: 'new-password', |
            class: 'form-control',      maxlength: '30'
          %small.form-text.text-muted= t('.leave_blank_if_you_don_t_want_to_change_it')

        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: 'new-password', |
            class: 'form-control', maxlength: '30'

        .form-group
          = f.label :current_password
          = f.password_field :current_password, autocomplete: 'current-password', |
            class: 'form-control', required: true
          %small.form-text.text-muted= t('.we_need_your_current_password_to_confirm_your_changes')

        .form-group
          = f.label :プロフィール画像
          = f.file_field :image, autofocus: true, class: 'form-control'
          -#.actions
          -#  = f.submit "Update",class: 'image-update'

        %br
        .form-group
          = f.submit t('.update'), class: 'btn btn-primary btn-block'
          .back-my-page
            = link_to "マイページに戻る", user_path(@user.id)

        %hr.devise-link.my-5/
        .form-group
          = link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4'
          = link_to t('.cancel_my_account'), registration_path(resource_name), |
            data: {confirm: t('.are_you_sure')},                      |
            method: :delete, class: 'btn btn-danger btn-block'

.common-footer
  .car-mountain
    .car= image_tag('/html/top-logo-car.png')
    .mountain= image_tag('/html/top-logo-mountain.png')
  .copyright
    .text= image_tag('/html/copyright.png')
